<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnSettings"
      android:text="@string/changeTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/Styte_btn"
      android:padding="@dimen/paddingBtnSetting"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/textView"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightTextView"
        android:layout_margin="@dimen/marginTextView"
        android:background="@drawable/input_text"
        android:gravity="end"
        android:padding="@dimen/paddingText"
        android:textSize="@dimen/textSizeView"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">



        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/Styte_btn"
            android:text="@string/_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/Styte_btn"
            android:text="@string/_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/Styte_btn"
            android:text="@string/_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mul"
            style="@style/Styte_btn"
            android:text="@string/multiplication" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/Styte_btn"
            android:text="@string/_4" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/Styte_btn"
            android:text="@string/_5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/Styte_btn"
            android:text="@string/_6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sub"
            style="@style/Styte_btn"
            android:text="@string/subtraction" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/Styte_btn"
            android:text="@string/_7"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/Styte_btn"
            android:text="@string/_8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/Styte_btn"
            android:text="@string/_9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            style="@style/Styte_btn"
            android:text="@string/addition" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/Styte_btn"
            android:text="@string/_0" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_res"
            style="@style/Styte_btn"
            android:text="@string/reset" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equals"
            style="@style/Styte_btn"
            android:text="@string/equally" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_div"
            style="@style/Styte_btn"
            android:text="@string/division" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>